<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="800" prefWidth="1400" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <right>
        <Canvas fx:id="canvas" height="800.0" onMouseClicked="#canvasClicked" width="1000.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin></Canvas>
    </right>
    <left>
        <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="800.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <items>
            <GridPane fx:id="gridPane">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
            </GridPane>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
                    <children>
                        <VBox prefHeight="300.0" prefWidth="500.0" AnchorPane.leftAnchor="50.0" AnchorPane.topAnchor="50.0">
                            <children>
                                <Label fx:id="quoteText" prefHeight="250.0" prefWidth="500.0" text="Label" textAlignment="CENTER" wrapText="true">
                                    <font>
                                        <Font name="Arial Italic" size="36.0" />
                                    </font>
                                </Label>
                                <Label fx:id="quoteTextSource" alignment="CENTER_RIGHT" maxHeight="200.0" maxWidth="500.0" text="Label" textAlignment="RIGHT">
                                    <font>
                                        <Font name="Arial Black" size="25.0" />
                                    </font>
                                </Label>
                            </children></VBox>
                    </children></AnchorPane>
            </items>
        </SplitPane>
    </left>
</BorderPane>
